---
import Layout from '@layouts/Layout.astro'
import GetMaxDuration from '@components/GetMaxDuration'
import GetScoreCount from '@components/GetScoreCount'
import GetCountPlatform from '@components/GetCountPlatform';
import GetActor from '@components/GetActor';
---

<Layout title="Movies PI.">
	<main>
		<div class="max-w-7xl">
			<h1 class="text-7xl font-black text-center py-8">Spiffy Front</h1>
			<GetMaxDuration client:load />
			<GetScoreCount client:load />
			<GetCountPlatform client:load />
			<GetActor client:load />
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
</style>
